# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[**.min.js]
indent_style = ignore
trim_trailing_whitespace = ignore
insert_final_newline = ignore

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
